<Window x:Class="PowerBIOptimizer.UI.Windows.OptimizedQueryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Optimized Query" 
        Height="500" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Original Query" 
                         FontWeight="Bold"
                         Margin="0,0,0,5"/>
                <TextBlock x:Name="QueryNameText" 
                         Text="Query Name"
                         Foreground="{StaticResource SecondaryBrush}"/>
            </StackPanel>

            <ComboBox x:Name="QueryTypeComboBox"
                      Grid.Column="1"
                      Width="120"
                      SelectedIndex="0"
                      SelectionChanged="QueryTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="DAX"/>
                <ComboBoxItem Content="M Query"/>
                <ComboBoxItem Content="SQL"/>
            </ComboBox>
        </Grid>

        <!-- Query Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Original Query -->
            <GroupBox Header="Original" Grid.Column="0">
                <TextBox x:Name="QueryTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"/>
            </GroupBox>

            <!-- Arrows -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center" 
                        Margin="10,0">
                <Button x:Name="OptimizeButton"
                        Click="OptimizeButton_Click"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/optimize.png" 
                               Width="16" 
                               Height="16" 
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Optimize â†’"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Optimized Query -->
            <GroupBox Header="Optimized" Grid.Column="2">
                <TextBox x:Name="OptimizedQueryTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"/>
            </GroupBox>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Status -->
            <TextBlock x:Name="StatusText"
                      Grid.Column="0"
                      VerticalAlignment="Center"
                      Foreground="{StaticResource SecondaryBrush}"/>

            <!-- Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="CopyButton"
                        Click="CopyButton_Click"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/copy.png" 
                               Width="16" 
                               Height="16" 
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Copy Optimized"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="CloseButton"
                        Click="CloseButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/close.png" 
                               Width="16" 
                               Height="16" 
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Close"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>