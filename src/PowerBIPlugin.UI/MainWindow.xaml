<Window x:Class="PowerBIPlugin.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Power BI Plugin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- For buttons -->
            <RowDefinition Height="*"/>    <!-- For list boxes -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="btnGetOpenProject" Content="Get Open Projects" Click="btnGetOpenProject_Click" Width="150" Height="30" Margin="0,0,10,0" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <ListBox Name="lbOpenProjects" Height="100" Margin="0,10,0,0" SelectionChanged="lbOpenProjects_SelectionChanged" />
            <ListBox Name="lbQueries" Height="100" Margin="0,10,0,0" />
             <!-- SelectionChanged="lbQueries_SelectionChanged" -->
        </StackPanel>
    </Grid>
</Window>