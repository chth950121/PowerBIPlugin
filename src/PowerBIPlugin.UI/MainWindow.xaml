<Window x:Class="PowerBIPlugin.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Power BI Plugin" Height="500" Width="700" Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Text="Power BI Query &amp; Measure Viewer" FontSize="18" 
                   FontWeight="Bold" Foreground="#333"
                   HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Content Section -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Open Projects Section -->
            <StackPanel Grid.Column="0" Margin="5">
                <TextBlock Text="Open Projects" FontWeight="Bold" Foreground="#555" Margin="0,5"/>
                <Border Background="White" CornerRadius="5" Padding="5" BorderBrush="#CCC" BorderThickness="1">
                    <ListBox Name="lbOpenProjects" Height="150" SelectionChanged="lbOpenProjects_SelectionChanged"/>
                </Border>
                <Button Content="Get Open Projects" Click="btnGetOpenProject_Click" 
                        Margin="0,10,0,0" Height="30"
                        Background="#0078D7" Foreground="White" 
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- Queries Section -->
            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="Queries" FontWeight="Bold" Foreground="#555" Margin="0,5"/>
                <Border Background="White" CornerRadius="5" Padding="5" BorderBrush="#CCC" BorderThickness="1">
                    <ListBox Name="lbQueries" Height="150"/>
                </Border>
            </StackPanel>

            <!-- Measures Section -->
            <StackPanel Grid.Column="2" Margin="5">
                <TextBlock Text="Measures" FontWeight="Bold" Foreground="#555" Margin="0,5"/>
                <Border Background="White" CornerRadius="5" Padding="5" BorderBrush="#CCC" BorderThickness="1">
                    <ListBox Name="lbMeasures" Height="150"/>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
